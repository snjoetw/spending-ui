{{outlet}}

{{#paper-toolbar class="page-toolbar"}}
  {{#paper-toolbar-tools}}
    <h2>
      Import Transactions
    </h2>
    <span class="flex"></span>
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button iconButton=true}}
          {{paper-icon "more_vert"}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content width=4 as |content|}}
        {{#content.menu-item onClick="openSomething"}}
          {{paper-icon "cloud_download"}}
          <span>Spending</span>
        {{/content.menu-item}}
      {{/menu.content}}
    {{/paper-menu}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}

<br/>
<br/>
<br/>
<br/>
<table>
  <tr>
    <th>Transaction Date</th>
    <th>Type</th>
    <th>Source Category</th>
    <th>Category</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Account</th>
    <th></th>
  </tr>
  {{#each pendingTransactions as |transaction|}}
    <tr>
      <td>{{transaction.transactionDate}}</td>
      <td>{{transaction.transactionType}}</td>
      <td>{{transaction.sourceCategoryName}}</td>
      <td>{{transaction.category.name}}</td>
      <td>{{transaction.description}}</td>
      <td>{{format-money transaction.amount}}</td>
      <td>{{transaction.account}}</td>
      <td>
        {{#paper-button iconButton=true onClick=(action "doCreateTransaction" transaction)}}
          {{paper-icon "arrow_downward"}}
        {{/paper-button}}
        {{#paper-button iconButton=true onClick=(action "doDeleteTransaction" transaction)}}
          {{paper-icon "delete"}}
        {{/paper-button}}
      </td>
    </tr>
  {{/each}}
</table>
